<!DOCTYPE html>
<html>
<head>
  <title>Blueberry</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', :media=>'all') %>
	<%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js', 'data-turbolinks-track' => true %>
</head>
<body>

<%= flash[:notice] if flash[:notice] %>
<%= flash[:alert] if flash[:alert] %>

<% if current_user %>
<%= link_to 'Login', new_session_path %>
<% end %>
<% if session[:user_id] %>
<%= link_to 'Logout', session_path(session[:user_id]), method: :delete %>
<% end %>

<%= yield %>

</body>
</html>
